     * @principle Enforces document ownership for writes. Validates relational integrity between documents.
     */
    match /users/{userId}/cards/{cardId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == cardId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces document ownership for PurchaseInstallment entities under a user's data tree.
     * @path /users/{userId}/purchaseInstallments/{purchaseInstallmentId}
     * @allow (create) User 'user123' can create a new PurchaseInstallment document with purchaseInstallmentId matching the path.
     * @deny (create) User 'user456' cannot create a PurchaseInstallment document under /users/user123/purchaseInstallments/purchaseInstallment456.
     * @principle Enforces document ownership for writes. Validates relational integrity between documents.
     */
    match /users/{userId}/purchaseInstallments/{purchaseInstallmentId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
