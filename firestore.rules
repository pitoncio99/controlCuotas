/**
 * @fileoverview Firestore Security Rules for CuotaControl App
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model, where each user has complete control over their data.
 *
 * Data Structure:
 * All data is nested under /users/{userId}, providing clear ownership and separation.
 *
 * Key Security Decisions:
 * - User listing is disallowed to protect user privacy.
 * - Data consistency between paths and document content is enforced to prevent unauthorized access.
 *
 * Authentication Notes:
 * - The error `FirebaseError: Firebase: Error (auth/operation-not-allowed)` suggests an issue with Firebase Authentication.
 * - The authentication provider is enabled for both `password` and `anonymous` .
 * - Verify that email/password sign-in is enabled in the Firebase Console for the project.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Enforces document ownership for Person entities under a user's data tree.
     * @path /users/{userId}/people/{personId}
     * @allow (create) User 'user123' can create a new Person document with personId matching the path.
     * @deny (create) User 'user456' cannot create a Person document under /users/user123/people/person456.
     * @principle Enforces document ownership for writes. Validates relational integrity between documents.
     */
    match /users/{userId}/people/{personId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == personId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces document ownership for Card entities under a user's data tree.
     * @path /users/{userId}/cards/{cardId}
     * @allow (create) User 'user123' can create a new Card document with cardId matching the path.
