/**
 * @file Firebase Security Rules for Finance Management App
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for personal financial data (persons, purchase installments, expenses, incomes) stored under the `/users/{userId}` path.
 * Globally available data (cards) are stored under the `/cards/{cardId}` path.
 *
 * Data Structure:
 * - /users/{userId}/persons/{personId}: Information about people, owned by the user.
 * - /cards/{cardId}: Globally available card information.
 * - /users/{userId}/purchaseInstallments/{purchaseInstallmentId}: Purchase installment data for a user.
 * - /users/{userId}/expenses/{expenseId}: Expense data for a user.
 * - /users/{userId}/incomes/{incomeId}: Income data for a user.
 *
 * Key Security Decisions:
 * - User data is strictly owned and controlled by the user ID in the path.
 * - Cards are globally readable.
 * - List operations are enabled for owners on their respective user subcollections.
 * - Data validation is limited to ownership checks and relational integrity.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is made by a signed-in user.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user ID matches the provided user ID.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the owner of the existing document.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /***************** User-Owned Data: Persons *****************/

    /**
     * @description Controls access to person documents under a user's path.
     * @path /users/{userId}/persons/{personId}
     * @allow (create) - Authenticated user can create a person document if the userId matches the authenticated user's ID and the document.id matches the personId.
     * @allow (get, list) - Authenticated user can read their own person documents.
     * @allow (update, delete) - Authenticated user can update or delete their own person documents if the document exists.
     * @deny (create) - User cannot create a document with a mismatched userId.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/persons/{personId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == personId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /***************** Global Data: Cards *****************/

    /**
     * @description Controls access to card documents. Cards are globally available.
     * @path /cards/{cardId}
     * @allow (get, list) - Any user can read card documents.
     * @deny (create, update, delete) - No user can create, update, or delete card documents.
     * @principle Allows public read access while restricting write access.
     */
    match /cards/{cardId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /***************** User-Owned Data: Purchase Installments *****************/

    /**
     * @description Controls access to purchase installment documents under a user's path.
     * @path /users/{userId}/purchaseInstallments/{purchaseInstallmentId}
     * @allow (create) - Authenticated user can create a purchase installment document if the userId matches the authenticated user's ID and the document.id matches the purchaseInstallmentId.
     * @allow (get, list) - Authenticated user can read their own purchase installment documents.
     * @allow (update, delete) - Authenticated user can update or delete their own purchase installment documents if the document exists.
     * @deny (create) - User cannot create a document with a mismatched userId.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/purchaseInstallments/{purchaseInstallmentId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == purchaseInstallmentId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /***************** User-Owned Data: Expenses *****************/

    /**
     * @description Controls access to expense documents under a user's path.
     * @path /users/{userId}/expenses/{expenseId}
     * @allow (create) - Authenticated user can create an expense document if the userId matches the authenticated user's ID and the document.id matches the expenseId.
     * @allow (get, list) - Authenticated user can read their own expense documents.
     * @allow (update, delete) - Authenticated user can update or delete their own expense documents if the document exists.
     * @deny (create) - User cannot create a document with a mismatched userId.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/expenses/{expenseId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == expenseId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /***************** User-Owned Data: Incomes *****************/

    /**
     * @description Controls access to income documents under a user's path.
     * @path /users/{userId}/incomes/{incomeId}
     * @allow (create) - Authenticated user can create an income document if the userId matches the authenticated user's ID and the document.id matches the incomeId.
     * @allow (get, list) - Authenticated user can read their own income documents.
     * @allow (update, delete) - Authenticated user can update or delete their own income documents if the document exists.
     * @deny (create) - User cannot create a document with a mismatched userId.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/incomes/{incomeId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == incomeId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }
  }
}