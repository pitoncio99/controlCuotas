      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces document ownership for Expense entities under a user's data tree.
     * @path /users/{userId}/expenses/{expenseId}
     * @allow (create) User 'user123' can create a new Expense document with expenseId matching the path.
     * @deny (create) User 'user456' cannot create a Expense document under /users/user123/expenses/expense456.
     * @principle Enforces document ownership for writes. Validates relational integrity between documents.
     */
    match /users/{userId}/expenses/{expenseId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == expenseId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces document ownership for Income entities under a user's data tree.
     * @path /users/{userId}/incomes/{incomeId}
     * @allow (create) User 'user123' can create a new Income document with incomeId matching the path.
     * @deny (create) User 'user456' cannot create a Income document under /users/user123/incomes/income456.
     * @principle Enforces document ownership for writes. Validates relational integrity between documents.
     */
    match /users/{userId}/incomes/{incomeId} {
      allow get: if isOwner(userId);
