/**
 * @fileOverview Firestore Security Rules for a budget tracking application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for personal financial data (budgets, expenses, purchase installments).
 * Only the authenticated user can access their own data. Top-level collections for `Person` and `Card` are publicly readable.
 *
 * Data Structure:
 * - /people/{personId}: Stores profile information. Publicly readable.
 * - /cards/{cardId}: Stores card information. Publicly readable.
 * - /users/{userId}/budgets/{budgetId}: Stores budget information for a specific user.
 * - /users/{userId}/expenses/{expenseId}: Stores expense records for a specific user.
 * - /users/{userId}/purchaseInstallments/{purchaseInstallmentId}: Stores purchase installment data for a specific user.
 *
 * Key Security Decisions:
 * - Users cannot list all users.
 * - Data under /users/{userId} is strictly private to that user.
 * - The application does not support shared access or roles at this time.
 *
 * Denormalization for Authorization:
 *   - Ownership is enforced through path-based rules (nesting data under /users/{userId}).
 * Structural Segregation:
 *  - User-specific data is stored in private subcollections under `/users/{userId}`
 *    while general data such as `Person` and `Card` is stored in public top-level collections.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read Person entities. Only allows creating a Person document if the authenticated user's ID matches the `personId`.
     * @path /people/{personId}
     * @allow (get, list): if true
     * @allow (create): if isSignedIn() && request.resource.data.id == personId
     * @deny (update, delete): Always denied, updates are disallowed.
     * @deny (create): if !isSignedIn() || request.resource.data.id != personId
     * @principle Allows public read access to person data, but requires authentication for creation, and restricts creation to the authenticated user's ID.
     */
    match /people/{personId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.id == personId;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read Card entities.  Does not allow create, update, or delete operations.
     * @path /cards/{cardId}
     * @allow (get, list): if true
     * @deny (create, update, delete): Always denied, read-only collection.
     * @principle Provides public read access to card data.
     */
    match /cards/{cardId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows a user to manage their own PurchaseInstallment entities.
     * @path /users/{userId}/purchaseInstallments/{purchaseInstallmentId}
     * @allow (get, list): if isSignedIn() && isOwner(userId)
     * @allow (create): if isSignedIn() && isOwner(userId) && request.resource.data.personId == userId
     * @allow (update): if isSignedIn() && isExistingOwner(userId) && request.resource.data.personId == userId
     * @allow (delete): if isSignedIn() && isExistingOwner(userId)
     * @deny (create): if !isSignedIn() || !isOwner(userId) || request.resource.data.personId != userId
     * @deny (update): if !isSignedIn() || !isExistingOwner(userId) || request.resource.data.personId != userId
     * @deny (delete): if !isSignedIn() || !isExistingOwner(userId)
     * @principle Enforces user-ownership for all operations on PurchaseInstallment entities.
     */
    match /users/{userId}/purchaseInstallments/{purchaseInstallmentId} {
      allow get, list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.personId == userId;
      allow update: if isSignedIn() && isExistingOwner(userId) && request.resource.data.personId == userId;
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Allows a user to manage their own Expense entities.
     * @path /users/{userId}/expenses/{expenseId}
     * @allow (get, list): if isSignedIn() && isOwner(userId)
     * @allow (create): if isSignedIn() && isOwner(userId)
     * @allow (update): if isSignedIn() && isExistingOwner(userId)
     * @allow (delete): if isSignedIn() && isExistingOwner(userId)
     * @deny (create): if !isSignedIn() || !isOwner(userId)
     * @deny (update): if !isSignedIn() || !isExistingOwner(userId)
     * @deny (delete): if !isSignedIn() || !isExistingOwner(userId)
     * @principle Enforces user-ownership for all operations on Expense entities.
     */
    match /users/{userId}/expenses/{expenseId} {
      allow get, list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Allows a user to manage their own Budget entities.
     * @path /users/{userId}/budgets/{budgetId}
     * @allow (get, list): if isSignedIn() && isOwner(userId)
     * @allow (create): if isSignedIn() && isOwner(userId)
     * @allow (update): if isSignedIn() && isExistingOwner(userId);
     * @allow (delete): if isSignedIn() && isExistingOwner(userId)
     * @deny (create): if !isSignedIn() || !isOwner(userId)
     * @deny (update): if !isSignedIn() || !isExistingOwner(userId)
     * @deny (delete): if !isSignedIn() || !isExistingOwner(userId)
     * @principle Enforces user-ownership for all operations on Budget entities.
     */
    match /users/{userId}/budgets/{budgetId} {
      allow get, list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    // --- Helper Functions ---

    /**
     * @description Checks if the user is signed in.
     * @return {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is the owner of the resource based on the userId in the path.
     * @param {string} userId The userId from the path.
     * @return {boolean} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is the owner of the existing resource based on the userId in the path and that the document exists.
     * @param {string} userId The userId from the path.
     * @return {boolean} True if the user is the owner and the resource exists, false otherwise.
     */
    function isExistingOwner(userId) {
      return isSignedIn() && isOwner(userId) && resource != null;
    }
  }
}